<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.summary.SummaryFragment">

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="353dp"
        android:layout_height="117dp"
        android:background="@drawable/summary_bg"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="81dp" />

    <View
        android:id="@+id/verticalLine"
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:background="@drawable/vertical_line"
        app:layout_constraintEnd_toStartOf="@+id/profit_label"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toEndOf="@+id/seller_stats_label"
        tools:layout_editor_absoluteY="84.5dp" />

    <TextView
        android:id="@+id/text_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/seller_stats_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:text="Seller Stats"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/myRectangleView"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/listed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="0 item(s)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/verticalLine"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/listed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Listed"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/listed"
        app:layout_constraintStart_toStartOf="@+id/myRectangleView"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="0 item(s)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/verticalLine"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/sold_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:text="Sold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/sold"
        app:layout_constraintStart_toStartOf="@+id/myRectangleView"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/profit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profit"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="$0"
        android:textColor="#F9AA33"
        android:textSize="44sp"
        app:layout_constraintTop_toTopOf="@+id/myRectangleView"
        tools:layout_editor_absoluteX="291dp" />


</androidx.constraintlayout.widget.ConstraintLayout>