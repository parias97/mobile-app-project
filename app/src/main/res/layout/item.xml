<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_pic"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/item_initial_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/item_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Initial Price: $"
            android:textColor="#FFFFFF"/>


        <TextView
            android:id="@+id/item_initial_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/item_initial_price_label"
            android:ellipsize="end"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_initial_price_label"
            android:layout_toRightOf="@id/item_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Quantity: "
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_initial_price_label"
            android:layout_toRightOf="@id/item_quantity_label"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/item_platform_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_quantity"
            android:layout_toRightOf="@id/item_pic"
            android:text="Platform: "
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/item_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_quantity"
            android:layout_toRightOf="@id/item_platform_label"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/favoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/favorite_ic" />

        <ImageButton
            android:id="@+id/soldIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/sold_ic"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>