<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favoriteItem_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/favoriteItem_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"/>

        <TextView
            android:id="@+id/favoriteItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/favoriteItem_pic"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/favoriteItem_initial_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteItem_name"
            android:layout_toRightOf="@id/favoriteItem_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Initial Price: $"
            android:textColor="#FFFFFF"/>


        <TextView
            android:id="@+id/favoriteItem_initial_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteItem_name"
            android:layout_toRightOf="@id/favoriteItem_initial_price_label"
            android:ellipsize="end"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/favoriteItem_sold_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteItem_initial_price_label"
            android:layout_toRightOf="@id/favoriteItem_pic"
            android:text="Sold price: $"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/favoriteItem_sold_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteItem_initial_price_label"
            android:layout_toRightOf="@id/favoriteItem_sold_price_label"
            android:ellipsize="end"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/favorite_ic" />

        <ImageButton
            android:id="@+id/relistIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/relist_ic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>